<Page
    x:Class="bnn.Views.b1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:bnn.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="10, 0, 0, 0">
        <TextBox x:ConnectionId='2' x:Name="Filecontent" Header="File Content" HorizontalAlignment="Left" Margin="0,0,0,20"/>
        <TextBox x:ConnectionId='3' x:Name="FileName" Header="File Name" HorizontalAlignment="Left" Margin="0,0,0,20"/>
        <Button x:ConnectionId='4' x:Name="Save" Content="Save" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                    Margin="0,0,0,20"/>
        <Button x:ConnectionId='5' x:Name="LoadName" Content="LoadName" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                    Margin="0,0,0,20"/>


    </StackPanel>
</Page>

