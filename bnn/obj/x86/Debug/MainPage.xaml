<Page
    x:Class="bnn.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:bnn"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="1032.5" Height="634.5">


    <Grid RenderTransformOrigin="0.463,0.583" BorderBrush="blue" BorderThickness="2">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/ảnh bìa.jpg" Opacity="1" Stretch="UniformToFill" />
        </Grid.Background>

        <TextBlock HorizontalAlignment="Left" Margin="74,78,0,0" Text="FristName" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <TextBox x:ConnectionId='2' x:Name="FirstName" HorizontalAlignment="Left" Margin="174,74,0,0" Text="" VerticalAlignment="Top" Width="271" Height="40"/>
        <TextBlock HorizontalAlignment="Left" Margin="515,78,0,0" Text="LastName" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <TextBox x:ConnectionId='3' x:Name="LastName" HorizontalAlignment="Left" Margin="644,74,0,0" Text="" VerticalAlignment="Top" Width="325" Height="40"/>
        <TextBlock HorizontalAlignment="Left" Margin="74,155,0,0" Text="Email" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <TextBox x:ConnectionId='4' x:Name="Email"  HorizontalAlignment="Left" Margin="174,151,0,0" Text="" VerticalAlignment="Top" Width="271" Height="40"/>
        <TextBlock HorizontalAlignment="Left" Margin="74,226,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <PasswordBox x:ConnectionId='5' x:Name="Password" HorizontalAlignment="Left" Margin="174,216,0,0" VerticalAlignment="Top" Width="271" Height="40"/>
        <TextBlock x:ConnectionId='6' x:Name="Gender" HorizontalAlignment="Left" Margin="512,155,0,0" Text="Gender" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <TextBlock HorizontalAlignment="Left" Margin="514,222,0,0" Text="AvatarURL" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <RadioButton x:ConnectionId='7' Content="Male" HorizontalAlignment="Left" Margin="645,143,0,0" VerticalAlignment="Top" Tag="1"                      Width="87"/>
        <RadioButton x:ConnectionId='8' Content="Female" HorizontalAlignment="Left" Margin="765,143,0,0" VerticalAlignment="Top" Tag="0"                      Width="84"/>
        <RadioButton x:ConnectionId='9' Content="Other" HorizontalAlignment="Left" Margin="890,143,0,0" VerticalAlignment="Top" Tag="2" IsChecked="True"                      Width="87" />
        <Button x:ConnectionId='10' Content="Choose_images " HorizontalAlignment="Left" Margin="864,218,0,0" VerticalAlignment="Top" Width="120" Height="40"                      />
        <TextBlock HorizontalAlignment="Left" Margin="74,291,0,0" Text="Phone" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <TextBox x:ConnectionId='11' x:Name="Phone" HorizontalAlignment="Left" Margin="176,287,0,0" Text="" VerticalAlignment="Top" Width="271" Height="40"/>
        <TextBlock HorizontalAlignment="Left" Margin="515,287,0,0" Text="Birthday" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <TextBlock HorizontalAlignment="Left" Margin="74,364,0,0" Text="Address" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="70"/>
        <TextBox x:ConnectionId='12' x:Name="Address" HorizontalAlignment="Left" AcceptsReturn="True" Margin="174,360,0,0" Text="" VerticalAlignment="Top" Width="271" Height="112"/>
        <TextBlock HorizontalAlignment="Left" Margin="517,360,0,0" Text="Introduction" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="93"/>
        <TextBox x:ConnectionId='13' x:Name="Introduction" HorizontalAlignment="Left" AcceptsReturn="True" Margin="647,362,0,0" Text="" VerticalAlignment="Top" Width="184" Height="112"/>
        <Button x:ConnectionId='14' Content="Submit" Background="AliceBlue" HorizontalAlignment="Left" Margin="352,524,0,0" VerticalAlignment="Top" Width="139" Height="41"                  />
        <Button x:ConnectionId='15' Content="Reset" Background="AliceBlue" HorizontalAlignment="Left" Margin="595,524,0,0" VerticalAlignment="Top" Width="139" Height="41"                      />
        <TextBox x:ConnectionId='16' x:Name="AvatarURL" HorizontalAlignment="Left" Margin="649,220,0,0" Text="" VerticalAlignment="Top" Height="40" Width="186"/>
        <CalendarDatePicker HorizontalAlignment="Left" Margin="647,293,0,0" VerticalAlignment="Top" Height="42" Width="323"/>
        <Image x:ConnectionId='17' HorizontalAlignment="Left" Height="108" Margin="862,366,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.48,-0.66" x:Name="avatar"/>
        <TextBlock x:ConnectionId='18' x:Name="fristName" Visibility="Collapsed" HorizontalAlignment="Left" Margin="178,128,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" />
        <TextBlock x:ConnectionId='19' x:Name="email" Visibility="Collapsed" HorizontalAlignment="Left" Margin="182,198,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="17"/>
        <TextBlock x:ConnectionId='20' x:Name="password" Visibility="Collapsed" HorizontalAlignment="Left" Margin="182,263,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="28"/>
        <TextBlock x:ConnectionId='21' x:Name="phone" Visibility="Collapsed" HorizontalAlignment="Left" Margin="224,329,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="30"/>
        <TextBlock x:ConnectionId='22' x:Name="address" Visibility="Collapsed" HorizontalAlignment="Left" Margin="214,479,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="43"/>
        <TextBlock x:ConnectionId='23' x:Name="lastName" Visibility="Collapsed" HorizontalAlignment="Left" Margin="711,121,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="21"/>
        <ProgressRing x:ConnectionId='24' x:Name="LoadingIndicator" Visibility="Visible" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Height="172" Width="221"/>

    </Grid>
</Page>

